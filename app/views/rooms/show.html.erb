<%= turbo_stream_from "room_#{@room.id}_presentations" %>

<div class="bg-black">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 p-0">
        <div
          class="py-4 bg-black text-white d-flex flex-column justify-content-between align-items-center"
          style="height: 100vh; overflow: hidden;"
        >
          <h1 class='mb-0'><%= @room.name %></h1>
          <% if @presentation %>
            <%= render @presentation %>
            <%= render "presentations/next_presentation", next_presentation: @next_presentation %>
          <% end %>
        </div>

      </div>
    </div>

  </div>

</div>
