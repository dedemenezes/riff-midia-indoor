<div class="">
  <div class="bg-white">

    <%# HEADER %>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="d-flex justify-content-between py-4">

            <%# LEFT %>
            <div class="d-flex flex-column gap-2">
              <h1 class="mb-0 fw-bold fs-1">EVENTOS</h1>
              <p class="mb-0 text-muted">Programação completa do evento</p>
            </div>

            <%# RIGHT %>
            <div class="d-flex flex-column gap-2">
              <p class="mb-0 fw-bold fs-1">
                <%# JS UPDATE LIVE %>
                <%= Time.now.strftime('%H:%M') %>
              </p>
              <p class="mb-0 text-muted">
                <%= I18n.l(Date.today, format: :custom) %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="">

    <%# CONTENT %>
    <div class="row justify-content-center">
      <div class="col-12" style="background-color: #e1219a;">
        <div class="container">

          <%# TABLE.HEADER %>
          <div class="row px-3 py-3">
            <div class="col-2">
              <p class="mb-0 text-white fw-semibold">TIPO</p>
            </div>
            <div class="col-6">
              <p class="mb-0 text-white fw-semibold">EVENTO</p>
              </div>
            <div class="col-4">
              <p class="mb-0 text-white fw-semibold">DATA/HORÁRIO/SALA</p>
            </div>
          </div>

          <%# TABLE.BODY %>
          <% @presentations.first(5).each_with_index do |presentation, index| %>
            <div class="row px-3 py-3 align-items-start bg-white border-bottom" style="<%= index.zero? ? 'border-radius: 8px 8px 0 0;' : '' %>">

              <%# PRESENTATION.TYPE %>
              <div class="col-2 d-flex align-self-center" style="height: 100%;">
                <div class="d-flex gap-3 align-items-center">
                  <div style="width: 8px; height: 8px; background-color:rgb(168, 85, 247)" class="rounded-circle"></div>
                  <p class="mb-0 fw-semibold">Workshop</p>
                </div>
              </div>

              <%# PRESENTATION.CONTENT %>
              <div class="col-6">
                <div class="d-flex flex-column gap-2">
                  <p style="font-size: 22px" class="mb-0 fw-bold">Introdução à Coordenação de Intimidade</p>
                  <p style="font-size: 18px" class="mb-0 fw-bolder">
                    <i class="fa-solid fa-users me-1" style="font-size: 12px;"></i>
                    Renata Soares e July Manghirmalani
                  </p>
                  <p style="font-size: 14px" class="mb-0">Workshop introdutório sobre coordenação de intimidade no teatro e audiovisual.</p>
                </div>
              </div>

              <%# PRESENTATION.INFO %>
              <div class="col-4">
                <div class="d-flex flex-column gap-2 justify-content-start">

                  <%# PRESENTATION.DATE %>
                  <div class="d-flex align-items-center gap-3">
                    <i style="color: #e1219a;" class="fa-solid fa-calendar"></i>
                    <p class="mb-0 fw-semibold">28/10/2025</p>
                  </div>

                  <%# PRESENTATION.TIME %>
                  <div class="d-flex align-items-center gap-3">
                    <i style="color: #e1219a;" class="fa-solid fa-clock"></i>
                    <p class="mb-0">10:00 - 12:00</p>
                  </div>

                  <%# PRESENTATION.ROOM %>
                  <div class="d-flex align-items-center gap-3">
                    <i style="color: #e1219a;" class="fa-solid fa-location-dot"></i>
                    <p class="mb-0">Sala 1</p>
                  </div>
                  <span class="badge rounded-pill text-bg-success w-50">Em andamento</span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
