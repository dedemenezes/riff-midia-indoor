<div class="row px-3 py-3 align-items-start justify-content-evenly bg-body border-bottom" id="presentation_<%= presentation.id %>">
  <%# TYPE %>
  <div class="col-2 d-flex align-self-center" style="height: 100%;">
    <div class="d-flex gap-3 align-items-center">
      <%# <div style="width: 8px; height: 8px; background-color:rgb(168, 85, 247)" class="rounded-circle"></div> %>
      <p style="font-size:20px;" class="mb-0 fw-semibold"><%= presentation.category %></p>
    </div>
  </div>

  <%# CONTENT %>
  <div class="col-5">
    <div class="d-flex flex-column gap-2 <%= 'justify-content-center' unless presentation.presenter_name.present? %>">
      <p style="font-size: 28px" class="mb-0 fw-bold"><%= presentation.title %></p>
      <% if presentation.presenter_name.present? %>
        <p style="font-size: 20px" class="mb-0 text-secondary">
          <i class="fa-solid fa-users me-1 text-secondary" style="font-size: 12px;"></i>
          <%= presentation.presenter_name %>
        </p>
      <% end %>
      <p style="font-size: 18px" class="mb-0 text-secondary"><%= presentation.description %></p>
    </div>
  </div>

  <%# INFO %>
  <div class="col-3">
    <div class="d-flex flex-column gap-2 justify-content-start">

      <div class="d-flex align-items-center gap-3">
        <i style="color: #e1219a;" class="fa-solid fa-calendar"></i>
        <p style="font-size:24px;" class="mb-0 fw-semibold"><%= I18n.l(presentation.start_time.to_date, format: :short) %></p>
      </div>

      <div class="d-flex align-items-center gap-3">
        <i style="color: #e1219a;" class="fa-solid fa-clock"></i>
        <p style="font-size:24px;" class="mb-0">
          <%= presentation.start_time.strftime('%H:%M') %> - <%= presentation.end_time.strftime('%H:%M') %>
        </p>
      </div>

      <div class="d-flex align-items-center gap-3">
        <i style="color: #e1219a;" class="fa-solid fa-location-dot"></i>
        <p style="font-size:24px;" class="mb-0 fw-semibold"><%= presentation.room.name %></p>
      </div>
      <%= presentation_badge(presentation) %>

    </div>
  </div>

</div>
